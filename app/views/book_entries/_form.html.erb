<%= form_for @book_entry, :html => { :class => "form-horizontal book_entry" } do |f| %>
  <% if @book_entry.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@book_entry.errors.count, "error") %> prohibited this book_entry from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @book_entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="col-sm">
    <div class="form-group row">
      <%=f.error_span(:kind) %>
      <div class="col-xl-6">
        <label class="radio-button col-xl-12" value='arrive'>Arrive
          <%= f.radio_button :kind, :arrive %>
          <span class="checkmark"></span>
        </label>
      </div>
      <div class="col-xl-6">
        <label class="radio-button col-xl-12" value='lunch_out'>Lunch Out
          <%= f.radio_button :kind, :lunch_out %>
          <span class="checkmark"></span>
        </label>
      </div>
      <div class="col-xl-6">
        <label class="radio-button col-xl-12" value='lunch_in'>Lunch In
          <%= f.radio_button :kind, :lunch_in %>
          <span class="checkmark"></span>
        </label>
      </div>
      <div class="col-xl-6">
        <label class="radio-button col-xl-12" value='leave'>Leave
          <%= f.radio_button :kind, :leave %>
          <span class="checkmark"></span>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Check in', class: 'btn btn-primary', disabled: true, id: 'submit_book_entry' %>
      <%= link_to 'List entries',
                book_entries_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
<script>
  $(document).ready(function(){
    $("input[name^='book_entry']").click(function() {
      $("#submit_book_entry").attr('disabled', false);
    });
  });
</script>
