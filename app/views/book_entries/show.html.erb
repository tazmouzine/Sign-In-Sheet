<%- model_class = BookEntry -%>
<div class="col-md-12">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:kind) %>:</strong></dt>
    <dd><%= t("book_entry.kind.#{@book_entry.kind}") %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
    <dd><%= @book_entry.created_at %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                book_entries_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_book_entry_path(@book_entry), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                book_entry_path(@book_entry),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>